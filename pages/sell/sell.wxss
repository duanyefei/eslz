/* pages/origin/origin.wxss */
.classifyBar {
  position: absolute;
  width: 200rpx;
  top: 88rpx;
  bottom: 0rpx;
  background: #f2f2f2;
  overflow: auto;
}
.classifyBar .item {
  width: 160rpx;
  height: 100rpx;
  padding: 0 20rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #5f5f5f;
  border-bottom: 1px solid #e8e8e8;
}
.classifyBar .item.active text {
  display: inline-block;
  width: 150rpx;
  height: 46rpx;
  line-height: 46rpx;
  border-radius: 23rpx;
  background: #f05773;
  color: #fff;
}
.classifyBar .item.active {
  background: #fff;
  border-bottom: 0;
}

.mainBox {
  position: absolute;
  width: 530rpx;
  top: 88rpx;
  left: 220rpx;
  bottom: 0rpx;
  background: #fff;
  overflow: auto;
}
.assortmentHead {
  width: 510rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #5f5f5f;
  font-size: 28rpx;
  text-align: center;
}
.assortmentHead text::before {
  display: inline-block;
  content: "";
  width: 30rpx;
  border-top: 3rpx solid;
  padding-top: 10rpx;
  margin-right: 10rpx;
}
.assortmentHead text::after {
  display: inline-block;
  content: "";
  width: 30rpx;
  border-top: 3rpx solid;
  padding-top: 10rpx;
  margin-left: 10rpx;
}

.list-wrap {
  overflow: hidden;
}

.product-list2 {
  position: absolute;
  top: 168rpx;
  bottom: 0;
  width: 100%;
  overflow: auto;
  background: #f2f2f2;
  border-top: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.product-view2 {
  width: 245rpx;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-right: 20rpx; 
  background: #fff;
  float: left;
}

.product-img2 {
  display: block;
  width: 100%;
  height: 245rpx;
}

.product-text2 {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  height: 68rpx;
  overflow: hidden;
  padding: 0 18rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}

.product-price2 {
  color: #f05773;
  font-size: 24rpx;
  padding-left: 18rpx;
}

.product-barcode2 {
  float: left;
  font-size: 24rpx;
  color: #333;
  padding-left: 18rpx;
  overflow: hidden;
  word-break: break-all;
  height: 34rpx;
  width: 230rpx;
  padding-top: 8rpx;
}

.origin-img {
  float: right;
  width: 36rpx;
  height: 35rpx;
  margin-top: 10rpx;
  margin-right: 30rpx;
}